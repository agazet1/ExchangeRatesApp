<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- Definitions of logging targets -->
  <targets>
    <target name="file" xsi:type="File" fileName="logs/logfile.txt" layout="${longdate}|${level}|${logger}|${message}${exception:format=toString}" />
    <target name="console" xsi:type="Console" layout="${longdate}|${level}|${logger}|${message}${exception:format=toString}" />
  </targets>

  <!-- Logging rules -->
  <rules>
    <logger name="*" minlevel="Info" writeTo="console" />
    <logger name="*" minlevel="Error" writeTo="file" />
  </rules>
</nlog>